<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER_LEFT" prefHeight="400.0" prefWidth="200" spacing="10.0"
      xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.ModalController">
    <Label text="Nombre"/>
    <TextField fx:id="inputName"/>
    <Pane prefHeight="15.0" prefWidth="177.0"/>
    <Label text="Apellidos"/>
    <TextField fx:id="inputLastName"/>
    <Pane prefHeight="15.0" prefWidth="177.0"/>
    <Label text="Edad"/>
    <TextField fx:id="inputAge"/>
    <Pane prefHeight="15.0" prefWidth="177.0"/>
    <Button mnemonicParsing="false" onAction="#savePerson" prefHeight="25.0" prefWidth="265.0" text="Guardar Datos"/>
    <Button mnemonicParsing="false" onAction="#exit" prefHeight="25.0" prefWidth="265.0" text="Salir"/>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
</VBox>
